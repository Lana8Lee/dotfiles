  status = auto
[alias]
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git --no-pager l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull --ff-only
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all -p
  st = status
  ci = commit
  co = checkout
  br = branch
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  tree = !git la --oneline
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = mate -w
  autocrlf = input
  safecrlf = true
[apply]
  whitespace = nowarn
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset